{
  "compilerOptions": {
    "target": "ES2017",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,

    // FIX 1: Change module back to commonjs or node. 
    // This often resolves module import ambiguities.
    "module": "commonjs", 

    // FIX 2: CRITICAL RESOLUTION CHANGE. 
    // Changing from "bundler" to "node" is essential for external package compatibility.
    "moduleResolution": "node", 

    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react-jsx",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./src/*"]
    },
    
    // Custom type roots must point to the folder containing your new socketio.d.ts file.
    "typeRoots": [
      "./node_modules/@types",
      "./src/types" // <-- Assumes you placed the fix here!
    ]
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    ".next/dev/types/**/*.ts",
    "**/*.mts"
  ],
  "exclude": ["node_modules"]
}